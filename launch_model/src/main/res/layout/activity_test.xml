<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <Button
        android:id="@+id/main_b_jump"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Activity B"/>

    <Button
        android:id="@+id/main_b_jump_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_b_jump"
        android:visibility="gone"
        tools:text="Activity B"
        tools:visibility="visible"/>

    <Button
        android:id="@+id/main_b_jump_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_b_jump_2"
        android:visibility="gone"
        tools:text="Activity B"
        tools:visibility="visible"/>

    <Button
        android:id="@+id/main_b_jump_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_b_jump_3"
        android:visibility="gone"
        tools:text="Activity B"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/main_tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="20sp"
        tools:text="Test"/>

</RelativeLayout>