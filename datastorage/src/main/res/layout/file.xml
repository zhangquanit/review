<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_appfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="App File"
        />
    <Button
        android:id="@+id/btn_internalFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Internal File"
        />
    <Button
        android:id="@+id/btn_externalFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="External File"
        />
    <Button
        android:id="@+id/btn_fileprovider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FileProvider"
        />
</LinearLayout>